<%# locals: (recipe:) %>
<%= turbo_frame_tag :recipe_ingredients do %>
  <div class="flex items-center">
    <div class="font-bold text-2xl grow">Ingredients</div>
    <%= button_to 'Done', list_ingredients_recipe_path(recipe), method: :get, class: 'btn-secondary' %>
  </div>

  <div class="grid grid-cols-[1fr_auto_auto] gap-3 items-center">
    <%= turbo_frame_tag :ingredients do %>
      <%= render recipe.ingredients %>
    <% end %>

    <%= render 'ingredients/create', ingredient: recipe.ingredients.build %>
  </div>
<% end %>
