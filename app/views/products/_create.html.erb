<%= turbo_frame_tag :new_product do %>
  <div class="flex gap-4">
    <%= inline_form_with model: product, url: products_path, method: :post do |form| %>
      <div class="grow"><%= form.text_field :name, placeholder: 'Name',autocomplete: 'off', 'data-1p-ignore' => true %></div>
      <div class="w-20"><%= form.number_field :calories, placeholder: 'kcal' %></div>
      <div class="w-20"><%= form.number_field :units_per_kcal, placeholder: 'u/kcal' %></div>
      <div class="w-20"><%= form.text_field :unit, placeholder: 'unit' %></div>
      <div class=""><%= form.submit 'Create' %></div>
    <% end %>
  </div>
<% end %>
